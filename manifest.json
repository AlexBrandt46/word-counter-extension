{
  "name": "Word Counter",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "description": "A browser extension to show the number of highlighted words or words input by the user.",
  "icons": {
    "16": "icons/w16x16.png",
    "32": "icons/w32x32.png",
    "48": "icons/w48x48.png",
    "128": "icons/w128x128.png"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  }
}